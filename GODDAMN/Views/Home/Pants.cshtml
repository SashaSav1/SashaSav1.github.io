                                <h5 class="mytext">@product.Name</h5>
                                <p class="mytext"><small class="text-muted">Размер: @product.Size</small></p>
                                <p class="mytext"><small class="text-muted">Цена: @product.Price</small></p>

                                @{
                                    basket.UserId = User.Identity.Name;
                                    basket.ProductId = product.Id;
                                }
                                @{
                                    basket.UserId = User.Identity.Name;
                                    basket.ProductId = product.Id;
                                    <div>
                                        <form method="post" asp-action="AboutProduct" asp-controller="Home">
                                            <input type="hidden" name="a" value="@product.Id" />
                                            <input type="submit" class="floating-button1" value="Подробности" />
                                        </form>
                                    </div>
                                    <div>
                                        <span style="padding: 0px 5px;">&nbsp;</span>

                                        <form method="post" asp-action="Create" asp-controller="Home">
                                            <input type="hidden" name="a" value="@basket.UserId" />
                                            <input type="hidden" name="b" value="@basket.ProductId" />
                                            <input type="hidden" name="c" value="Pants" />
                                            <input type="submit" class="floating-button1" value="Добавить" />
                                        </form>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </div>
            <span style="padding: 0px 20px;">&nbsp;</span>

        }


    }
}
